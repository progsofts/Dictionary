<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.progsoft.dictionary.MainActivity">


    <com.progsoft.dictionary.widget.ChineseCharacterView
        android:id="@+id/mChineseCharacterView"
        android:layout_width="match_parent"
        android:layout_height="1200px"
        app:autodraw="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_character"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入要查询的文字"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询/下一个" />

        <Button
            android:id="@+id/btn_character2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一个" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动绘制" />

        <Button
            android:id="@+id/btn_median"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示中线" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>